<%- include(partials + '/header.ejs') %>
<%- include(partials + "/flash") %> 

<script src="/js/generateChart.js"></script>


<div class="p-4 bg-light text-success rounded-3">
    <div class="container-fluid py-1">
      <h1 class="display-6 fw-bold">Chart Maker</h1>
      <p class="col-md-8 fs-7">
          Information about the chart maker.
      </p>
      

 
        <!-- Button trigger modal -->
        <div class="row">
            <div class="col-md-1">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Instructions 
                </button>
            </div>
            <div class="col-md-3">
                <a href="/improv/selectChart">
                    <button class="btn btn-secondary" style="margin-left: 20px;">Select Prior Chart</button>
                </a>
            </div>             
      </div>

        <!-- Modal -->
        <div class="modal fade text-secondary" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">How to Use the Chart Maker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                Information goes here
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>
    </div>

</div>



<section>
    <div style="margin-left: 20px; background-color: skyblue; background-size: contain; margin-right: 30px;">
        <br>
        <h4 style="margin-left: 20px;">Add Chord to Chart</h4>
        <button class="btn btn-success" onclick="generateChartParams()" style="margin-left: 20px;">Submit Your Chart</button>
        <div class="row">
            <div class="col">   
                <label for="composition-name" class="form-label" style="margin-left: 20px;">Name of Composition</label>
                <input type="text" class="form-control" id="composition-name" style="width: 300px; margin-left: 20px;">
                <div id="composition-name" class="form-text" style="margin-left: 20px;">This will be name will saved to your account for future retrieval of your composition</div>
            </div>
           
        </div>
        <div class="row">
            <div class="col">
                <input type="text" id="chord" class="form-control" placeholder="Chord Abbreviation..." style="width: 300px; margin-left: 20px;">
            </div>
            <div class="col">
                <input type="text" id="duration" class="form-control" placeholder="Number of Beats/Chord Duration" style="width: 300px; ">
            </div>
            <div class="col">   
                <button class="btn btn-primary" onclick="addChord()">Add Chord</button>
            </div>
           
        </div>
    
        <br>
    </div>
    <br>
    <div style="margin-left: 20px; background-color: darkseagreen; background-size: contain; margin-right: 30px;">
        <ol id="chart" style="margin-left: 20px;">
           
        </ol>
    </div>
   
</section>